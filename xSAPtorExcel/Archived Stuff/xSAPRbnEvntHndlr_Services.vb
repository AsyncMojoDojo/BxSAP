           Me.co_ConnMonitor.Value.IsDisposed()

          Me.co_ConnMonitor = New Lazy(Of xSAPConnectionMonitor)(
                                    Function()  Me.co_xSAPCntlrMain.Value.GetConnectionMonitorForm(),
